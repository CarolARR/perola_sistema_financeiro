<p id="notice"><%= notice %></p>

<h1>Contas A Pagar</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Emissor</th>
      <th>Data emissão</th>
      <th>Valor</th>
      <th>Descrição</th>
      <th>Multa por atraso</th>
      <th>Permite pagara pós vencimento</th>
      <th>Codigo barras</th>
      <th>Anexo da conta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contas_a_pagars.each do |contas_a_pagar| %>
      <tr>
        <td><%= contas_a_pagar.emissor %></td>
        <td><%= contas_a_pagar.dataEmissao %></td>
        <td><%= contas_a_pagar.valor %></td>
        <td><%= contas_a_pagar.descricaoConta %></td>
        <td><%= contas_a_pagar.valorMulta %></td>
        <td><%= contas_a_pagar.PermitePagarAposVencimento %></td>
        <td><%= contas_a_pagar.codigoBarras %></td>
        <td><%= contas_a_pagar.anexoConta %></td>
        <td><%= link_to 'Show', contas_a_pagar %></td>
        <td><%= link_to 'Edit', edit_contas_a_pagar_path(contas_a_pagar) %></td>
        <td><%= link_to 'Destroy', contas_a_pagar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

